# TrackNGo Backend Configuration

# Server Configuration
PORT=8080
NODE_ENV=development

# WebSocket Configuration
WS_PORT=8080
WS_PATH=/ws/live

# Application Configuration
APP_NAME=TrackNGo Backend
REGION=Thanjavur
LOG_LEVEL=info

# GPS Data Configuration
GPS_UPDATE_INTERVAL=3000
MAX_GPS_AGE_SECONDS=30
MAX_SPEED_KMH=120

# CORS Configuration (Frontend URLs)
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
GPS_RATE_LIMIT_REQUESTS=60
GPS_RATE_LIMIT_WINDOW_MS=60000

# Performance Settings
CLEANUP_INTERVAL_MS=60000
HEARTBEAT_INTERVAL_MS=30000

# Security Settings
ENABLE_RATE_LIMITING=true
LOG_INVALID_REQUESTS=true